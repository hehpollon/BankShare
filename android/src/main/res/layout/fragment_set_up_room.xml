<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_two">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="26dp">

            <TextView
                android:id="@+id/tv_create_room_name"
                style="@style/TextStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방정보"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_set_up_room_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tv_create_room_name"
                android:background="@drawable/edit_main_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="120dp">

            <TextView
                android:id="@+id/tv_create_room_description"
                style="@style/TextStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방정보"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_set_up_room_description"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_below="@id/tv_create_room_description"
                android:background="@drawable/edit_main_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/button_set_up_room_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/btn_next" />



</RelativeLayout>