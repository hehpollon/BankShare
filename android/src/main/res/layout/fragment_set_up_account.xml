<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_two">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="26dp">

            <TextView
                android:id="@+id/tv_create_room_name"
                style="@style/TextStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_set_up_room_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tv_create_room_name"
                android:background="@drawable/edit_main_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="110dp">

            <TextView
                android:id="@+id/tv_create_room_description"
                style="@style/TextStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_set_up_room_description"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tv_create_room_description"
                android:background="@drawable/edit_main_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="220dp"
            android:orientation="horizontal"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0.5dp"
                android:background="@color/greyish"/>
            <TextView
                android:layout_width="wrap_content"
                style="@style/TextStyle15"
                android:text="계좌 정보"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                android:layout_height="wrap_content" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0.5dp"
                android:background="@color/greyish"/>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="265dp">

        <TextView
            android:id="@+id/tv_create_room_bank"
            style="@style/TextStyle13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="은행선택"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_set_up_room_bank"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/tv_create_room_bank"
            android:background="@drawable/edit_main_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="345dp">

        <TextView
            android:id="@+id/tv_create_room_account"
            style="@style/TextStyle13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_set_up_room_account"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:layout_below="@id/tv_create_room_account"
            android:background="@drawable/edit_main_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

    </RelativeLayout>
    <Button
        android:id="@+id/button_set_up_room_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/btn_room" />



</RelativeLayout>