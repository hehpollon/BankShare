<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextStyle">
        <item name="android:textSize">42.4sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle7">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/azure</item>
    </style>
    <style name="TextStyle9">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">-19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle10">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">-10sp</item>
        <item name="android:textColor">@color/greyish</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">-13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle4">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">-9sp</item>
        <item name="android:textColor">@color/dirty_purple</item>
    </style>

    <style name="TextStyle5">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">-9sp</item>
        <item name="android:textColor">@color/aqua_blue</item>
    </style>

    <style name="TextStyle6">
        <item name="android:gravity">end</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">-9sp</item>
        <item name="android:textColor">@color/orange_red</item>
    </style>

    <style name="TextStyle3">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">-7sp</item>
        <item name="android:textColor">@color/white_54</item>
    </style>

    <style name="TextStyle8">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">19sp</item>
        <item name="android:textColor">@color/pinkish_grey</item>
    </style>
</resources>
